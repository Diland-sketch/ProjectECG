<UserControl  x:Class="GUI.ViewDashBoard.ECGMonitoringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:GUI.ViewModel"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:ECGMonitoringVM />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Border Background="#212529" CornerRadius="10" Padding="20" BorderThickness="1">
            <Grid>
                <!-- Columna izquierda: Información del paciente -->
                <StackPanel Width="400" Margin="0,0,10,0" VerticalAlignment="Top" HorizontalAlignment="Left">

                    <!-- Título -->
                    <TextBlock Text="Monitoreo de ECG" Foreground="White" FontSize="36" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,30"/>

                    <!-- Documento -->
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <TextBlock Text="Documento" Foreground="White" FontSize="20" Width="150" VerticalAlignment="Center"/>
                        <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding Paciente.Documento}" IsReadOnly="True" Width="200"/>
                    </StackPanel>

                    <!-- Nombre -->
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <TextBlock Text="Nombre" Foreground="White" FontSize="20" Width="150" VerticalAlignment="Center"/>
                        <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding Paciente.PrimerNombre}" IsReadOnly="True" Width="200"/>
                    </StackPanel>

                    <!-- Apellido -->
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <TextBlock Text="Apellido" Foreground="White" FontSize="20" Width="150" VerticalAlignment="Center"/>
                        <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding Paciente.PrimerApellido}" IsReadOnly="True" Width="200"/>
                    </StackPanel>

                    <!-- Fecha y Hora -->
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <TextBlock Text="Fecha y Hora" Foreground="White" FontSize="20" Width="150" VerticalAlignment="Center"/>
                        <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding FechaHoraECG}" IsReadOnly="True" Width="200"/>
                    </StackPanel>

                    <!-- Frecuencia cardíaca -->
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <TextBlock Text="Frecuencia (BPM)" Foreground="White" FontSize="20" Width="150" VerticalAlignment="Center"/>
                        <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding FrecuenciaCardiaca}" IsReadOnly="True" Width="200"/>
                    </StackPanel>

                    <!-- Amplitud de onda -->
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <TextBlock Text="Amplitud (mV)" Foreground="White" FontSize="20" Width="150" VerticalAlignment="Center"/>
                        <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding AmplitudOnda}" IsReadOnly="True" Width="200"/>
                    </StackPanel>

                    <!-- Botón Guardar PDF -->
                    <Button Content="Guardar en PDF" Command="{Binding GuardarEnPDFCommand}" Margin="0,30,0,0" 
                            Style="{StaticResource BtnStyleSearch}" Width="300" Height="50" FontSize="18" Foreground="White"/>
                </StackPanel>

                <!-- Columna derecha: Datos en tiempo real y gráfica -->
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Width="550">

                    <!-- Título gráfica -->
                    <TextBlock Text="Señal en tiempo real" Foreground="White" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

                    <!-- Gráfica ECG -->
                    <Border Background="#1E1E1E" BorderBrush="#3E3E3E" BorderThickness="1" CornerRadius="5" Padding="10" Height="300">
                        <!-- Aquí se mostrará la gráfica en tiempo real -->
                        <!--<LiveCharts:CartesianChart Series="{Binding ECGSignalSeries}" LegendLocation="None">
                            <LiveCharts:CartesianChart.AxisX>
                                <LiveCharts:Axis Title="Tiempo (s)" Labels="{Binding SignalTimeLabels}" Foreground="White"/>
                            </LiveCharts:CartesianChart.AxisX>
                            <LiveCharts:CartesianChart.AxisY>
                                <LiveCharts:Axis Title="Voltaje (mV)" Foreground="White"/>
                            </LiveCharts:CartesianChart.AxisY>
                        </LiveCharts:CartesianChart>-->
                    </Border>

                    <!-- Últimos valores capturados -->
                    <StackPanel Orientation="Horizontal" Margin="0,20">
                        <TextBlock Text="Voltaje actual (mV):" Foreground="White" FontSize="20" Margin="0,0,10,0"/>
                        <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding VoltajeActual}" IsReadOnly="True" Width="100"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
